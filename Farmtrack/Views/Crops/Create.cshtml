@model Crop

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Crop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autocomplete="on" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" autocomplete="off" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlantingDate" class="control-label"></label>
                <input asp-for="PlantingDate" class="form-control" />
                <span asp-validation-for="PlantingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HarvestDate" class="control-label"></label>
                <input asp-for="HarvestDate" class="form-control" />
                <span asp-validation-for="HarvestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WateringFrequencyDays" class="control-label"></label>
                <input asp-for="WateringFrequencyDays" class="form-control" />
                <span asp-validation-for="WateringFrequencyDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FertilizingFrequencyDays" class="control-label"></label>
                <input asp-for="FertilizingFrequencyDays" class="form-control" />
                <span asp-validation-for="FertilizingFrequencyDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrowthStage" class="control-label"></label>
                <input asp-for="GrowthStage" class="form-control" />
                <span asp-validation-for="GrowthStage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i>
                    <span class="d-none d-sm-inline"> Create</span>
                </button>
            </div>
        </form>
    </div>
</div>

